{
  "Notifications": {
    "Enabled": true,
    "Smtp": {
      "Host": "${SMTP_HOST}",
      "Port": 587,
      "EnableSsl": true,
      "Username": "${SMTP_USERNAME}",
      "Password": "${SMTP_PASSWORD}",
      "FromEmail": "${SMTP_FROM_EMAIL}",
      "FromDisplayName": "Production Test Automation",
      "TimeoutSeconds": 30,
      "MaxRetryAttempts": 3
    },
    "DefaultRecipients": [
      "${QA_TEAM_EMAIL}",
      "${DEV_TEAM_EMAIL}"
    ],
    "Rules": [
      {
        "Id": "prod-test-start",
        "Type": "TestStart",
        "Recipients": [
          "${QA_LEAD_EMAIL}"
        ],
        "IsEnabled": true,
        "CooldownPeriod": null,
        "Conditions": {}
      },
      {
        "Id": "prod-test-success",
        "Type": "TestSuccess",
        "Recipients": [
          "${QA_TEAM_EMAIL}"
        ],
        "IsEnabled": true,
        "CooldownPeriod": "00:15:00",
        "Conditions": {}
      },
      {
        "Id": "prod-test-failure",
        "Type": "TestFailure",
        "Recipients": [
          "${QA_TEAM_EMAIL}",
          "${DEV_TEAM_EMAIL}"
        ],
        "IsEnabled": true,
        "CooldownPeriod": null,
        "Conditions": {}
      },
      {
        "Id": "prod-critical-failure",
        "Type": "CriticalFailure",
        "Recipients": [
          "${QA_LEAD_EMAIL}",
          "${DEV_LEAD_EMAIL}",
          "${MANAGER_EMAIL}"
        ],
        "IsEnabled": true,
        "CooldownPeriod": null,
        "Conditions": {}
      },
      {
        "Id": "prod-report-generated",
        "Type": "ReportGenerated",
        "Recipients": [
          "${QA_TEAM_EMAIL}",
          "${STAKEHOLDERS_EMAIL}"
        ],
        "IsEnabled": true,
        "CooldownPeriod": "00:30:00",
        "Conditions": {}
      }
    ]
  }
}
