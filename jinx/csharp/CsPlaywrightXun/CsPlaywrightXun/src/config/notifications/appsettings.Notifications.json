{
  "Notifications": {
    "Enabled": true,
    "Smtp": {
      "Host": "smtp.example.com",
      "Port": 587,
      "EnableSsl": true,
      "Username": "your-email@example.com",
      "Password": "your-password",
      "FromEmail": "noreply@example.com",
      "FromDisplayName": "Test Automation Framework",
      "TimeoutSeconds": 30,
      "MaxRetryAttempts": 3
    },
    "DefaultRecipients": [
      "qa-team@example.com",
      "dev-team@example.com"
    ],
    "Rules": [
      {
        "Id": "test-start-notification",
        "Type": "TestStart",
        "Recipients": [
          "qa-lead@example.com"
        ],
        "IsEnabled": true,
        "CooldownPeriod": null,
        "Conditions": {}
      },
      {
        "Id": "test-success-notification",
        "Type": "TestSuccess",
        "Recipients": [
          "qa-team@example.com"
        ],
        "IsEnabled": true,
        "CooldownPeriod": "00:05:00",
        "Conditions": {}
      },
      {
        "Id": "test-failure-notification",
        "Type": "TestFailure",
        "Recipients": [
          "qa-team@example.com",
          "dev-team@example.com"
        ],
        "IsEnabled": true,
        "CooldownPeriod": null,
        "Conditions": {}
      },
      {
        "Id": "critical-failure-notification",
        "Type": "CriticalFailure",
        "Recipients": [
          "qa-lead@example.com",
          "dev-lead@example.com",
          "manager@example.com"
        ],
        "IsEnabled": true,
        "CooldownPeriod": null,
        "Conditions": {}
      },
      {
        "Id": "report-generated-notification",
        "Type": "ReportGenerated",
        "Recipients": [
          "qa-team@example.com",
          "stakeholders@example.com"
        ],
        "IsEnabled": true,
        "CooldownPeriod": "00:10:00",
        "Conditions": {}
      }
    ]
  }
}
