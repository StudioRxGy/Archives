{
  "TestConfiguration": {
    "Environment": {
      "Name": "Staging",
      "BaseUrl": "https://staging.example.com",
      "ApiBaseUrl": "https://staging-api.example.com",
      "Variables": {
        "DefaultTimeout": "45000",
        "RetryCount": "5"
      }
    },
    "Browser": {
      "Type": "Chromium",
      "Headless": true,
      "ViewportWidth": 1920,
      "ViewportHeight": 1080,
      "Timeout": 45000
    },
    "Api": {
      "Timeout": 45000,
      "RetryCount": 5,
      "RetryDelay": 2000
    },
    "Reporting": {
      "OutputPath": "Reports/Staging",
      "Format": "Html",
      "IncludeScreenshots": true
    },
    "Logging": {
      "Level": "Warning",
      "FilePath": "Logs/staging-test-{Date}.log"
    }
  }
}