{
  "TestConfiguration": {
    "Environment": {
      "Name": "Test",
      "BaseUrl": "https://test.example.com",
      "ApiBaseUrl": "https://test-api.example.com",
      "Variables": {
        "DefaultTimeout": "20000",
        "RetryCount": "2"
      }
    },
    "Browser": {
      "Type": "Chromium",
      "Headless": true,
      "ViewportWidth": 1280,
      "ViewportHeight": 720,
      "Timeout": 20000
    },
    "Api": {
      "Timeout": 20000,
      "RetryCount": 2,
      "RetryDelay": 500
    },
    "Reporting": {
      "OutputPath": "Reports/Test",
      "Format": "Html",
      "IncludeScreenshots": false
    },
    "Logging": {
      "Level": "Information",
      "FilePath": "Logs/test-{Date}.log"
    }
  }
}